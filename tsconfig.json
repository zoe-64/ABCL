{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext", "dom", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "removeComments": false,
    "outDir": "./versons/dev",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["preact"],
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react/jsx-runtime": ["./node_modules/preact/jsx-runtime"],
      "react-dom": ["./node_modules/preact/compat/"],
      "react-dom/*": ["./node_modules/preact/compat/*"]
    }
  },
  "include": ["node_modules/bc-stubs/bc/**/*.d.ts", "./src/**/*", "./bc-modding-utilities/src/Typedef.d.ts", "./bc-modding-utilities/src/**/*"]
}
